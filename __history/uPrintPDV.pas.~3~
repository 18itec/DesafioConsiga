unit uPrintPDV;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TFrmPrintPDV = class(TForm)
    Memo1: TMemo;
    Panel1: TPanel;
    Button1: TButton;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure DestroyForm;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmPrintPDV: TFrmPrintPDV;

implementation

{$R *.dfm}

procedure TFrmPrintPDV.Button1Click(Sender: TObject);
begin
  DestroyForm;
end;

procedure TFrmPrintPDV.DestroyForm;
begin
  try
    FreeAndNil(FrmPrintPDV);
  except
    on E: Exception do
      ShowMessage('Erro: ' + E.Message );
  end;
end;

procedure TFrmPrintPDV.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  DestroyForm;
end;

end.
